@model ExpenseTracker.Models.Expense
@{
    ViewData["Title"] = "Add Expense";
}

<h2>Add New Expense</h2>
<form asp-action="Create" method="post">
    <p>Title: <input asp-for="Title" /></p>
    <p>Amount: <input asp-for="Amount" type="number" step="0.01" /></p>
    <p>Category: <input asp-for="Category" /></p>
    <p>Date: <input asp-for="Date" type="date" /></p>
    <button type="submit">Save</button>
</form>